<!-- Google data-->
<meta name="description" content="{{ description }}" />
<meta name="author" content="{{ site.author.name }}" />

<!-- Google+ data -->
<meta itemprop="name" content="{{ title }}" />
<meta itemprop="description" content="{{ description }}" />
{% unless image %}
<meta itemprop="image" content="{{ base_path }}{{ image }}">
{% endunless %}

<!-- Twitter Card data -->
<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="{{ title }}" />
<meta name="twitter:description" content="{{ description }}" />
{% unless site.author.twitter %}
<meta name="twitter:creator" content="@{{ site.author.twitter }}" />
{% endunless %}
{% unless image %}
<meta name="twitter:image:src" content="{{ base_path }}{{ image }}">
{% endunless %}

<!-- Open Graph data -->
<meta property="og:title" content="{{ title }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ base_path }}" />
<meta property="og:description" content="{{ description }}" />
{% unless image %}
<meta property="og:image" content="{{ base_path }}{{ image }}">
{% endunless %}